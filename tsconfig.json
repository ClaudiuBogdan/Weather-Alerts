{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "outDir": "dist/ts",
  },
  
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
